    "commitizen": "^4.2.4",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "rc-config-loader": "^4.1.0",
    "standard-version": "^9.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
